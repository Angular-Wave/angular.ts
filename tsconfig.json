{
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "lib": ["ESNext", "DOM"],
    "target": "ES2017",
    "downlevelIteration": true,
    "sourceMap": false,
    "declaration": false,
    "incremental": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "types/**",
    "**/*.test.js",
    "**/*.spec.js"
  ]
}
